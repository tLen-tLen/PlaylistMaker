<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TrackNameStyle">
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue_main</item>
        <item name="colorSwitchThumbNormal">@color/blue_main</item>
        <item name="android:colorForeground">@color/blue_main</item>
    </style>

    <style name="ToolbarColor">
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LibraryTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/YP_black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabMode">fixed</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LibraryViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RefreshButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/YP_black</item>
    </style>

    <style name="NavigationViewStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/main_menu_color</item>
        <item name="itemTextColor">@drawable/main_menu_color</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
    </style>

</resources>